= form_for candidate do |f|
  -if candidate.errors.any?
    #error_explanation
      %h2= "#{pluralize(candidate.errors.count, "error")} prohibited this candidate from being saved:"
      %ul
        - candidate.errors.full_messages.each do |msg|
          %li= msg

  .field
    = f.label :name
    = f.text_field :name
  .field
    = f.label :country
    = f.text_field :country
  .field
    = f.label :email
    = f.text_field :email
  .field
    = f.label :portfolio
    = f.text_field :portfolio
  .actions
    = f.submit 'Save'
