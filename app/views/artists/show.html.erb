<% content_for :body_content_title do %>
  <%= @artist.first_name %>
<% end %>

<% content_for :body_content_left do %>
  
  <div>
    <h3>First Name</h3>
    <%=raw @artist.first_name %>
  </div>
  
  <div>
    <h3>Last Name</h3>
    <%=raw @artist.last_name %>
  </div>
  
  <div>
    <h3>Bio</h3>
    <%=raw @artist.bio %>
  </div>
  
  <div>
    <h3>Links</h3>
    <%=raw @artist.links %>
  </div>
  
  <div>
    <h3>Photo280</h3>
    <%= image_fu @artist.photo280, nil %>
  </div>
  
<% end %>

<% content_for :body_content_right do %>
  <h2><%= t('.other') %></h2>
  <ul id="artists">
    <% @artists.each do |artist| %>
      <li>
        <%= link_to artist.first_name, artist_url(artist) %>
      </li>
    <% end %>
  </ul>
<% end %>

<%= render :partial => "/shared/content_page" %>
