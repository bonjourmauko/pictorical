<% content_for :body_content_title do %>
  <%= @book.title %>
<% end %>

<% content_for :body_content_left do %>
  
  <div>
    <h3>Gallery</h3>
    <%=raw @book.gallery_id %>
  </div>
  
  <div>
    <h3>Title</h3>
    <%=raw @book.title %>
  </div>
  
  <div>
    <h3>Cover180</h3>
    <%= image_fu @book.cover180, nil %>
  </div>
  
  <div>
    <h3>Cover280</h3>
    <%= image_fu @book.cover280, nil %>
  </div>
  
<% end %>

<% content_for :body_content_right do %>
  <h2><%= t('.other') %></h2>
  <ul id="books">
    <% @books.each do |book| %>
      <li>
        <%= link_to book.title, book_url(book) %>
      </li>
    <% end %>
  </ul>
<% end %>

<%= render :partial => "/shared/content_page" %>
