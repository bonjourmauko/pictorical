- content_for :title do
  Pictorical, the world best stories illustrated

- content_for :meta_description do

  %meta{:content => "Pictorical publishes the world's greatest stories illustrated by the new generation of artists.", :name => "description"}

- content_for :opengraph do
  %meta{:content => "Pictorical", :property => "og:title"}
  %meta{:content => "website", :property => "og:type"}
  %meta{:content => "http://www.pictorical.com", :property => "og:url"}
  %meta{:content => "Pictorical", :property => "og:site_name"}

- content_for :love do
  %h1
    We
    %strong &#x2766;
    illustrated stories

- content_for :sidebar do
  .item
    .balloon.dark
      %h2
        Read stories
        %br
        Support new artists
      %h3
        Buy our ebooks for just $0.99 in the Apple iBookstore.
        %br
        Artists get half of the profits.
      .tails.dark
        = image_tag "tail.png"
      .ipad
        = image_tag "ipad-iphone.png"
  .item
    .balloon.darkred
      %h1
      Artists:
      %br
      Illustrate a story
      %h1
        Hundreds of stories for all ages to choose from. 
      %h1
        Get half of the profits, monthly.
      %h1
        = link_to "Apply now!", "http://artists.pictorical.com" 
  .item
    .balloon.blue
      #twitter
        .twitter-line= Twitter.user_timeline("pictorical").first.text
        .twitter-line= Twitter.user_timeline("pictorical").second.text
    .tails.blue
      = image_tag "tail.png"  
    = image_tag "twitter.png"
  .item
    .balloon.white
      #facebook
        %iframe{:allowtransparency => "true", :frameborder => "0", :scrolling => "no", :src => "http://www.facebook.com/plugins/likebox.php?id=127311773973735&amp;width=260&amp;connections=10&amp;stream=false&amp;header=false&amp;height=255", :style => "border:none; overflow:hidden; width:260px; height:232px; background: white;"}
    .tails.white
      = image_tag "tail.png"  
    = image_tag "facebook.png"

- content_for :main do
  - for @book in @books do
    = render "shared/covers" #- We will have to do a pagination, but not yet