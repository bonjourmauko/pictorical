- form_for [:admin, @story] do |f|
  = render :partial => "/shared/admin/error_messages", :locals => {:object => @story,:include_object_name => true}
  .field
    = f.label :title
    = f.text_field :title, :class => 'larger widest'
  .field
    = f.label :artist_id
    = f.collection_select :artist_id, Artist.all, :id, :fullname
  .field
    = f.label :writer_id
    = f.collection_select :writer_id, Writer.all, :id, :fullname
  .field
    = f.label :cover180
    = render :partial => "/shared/admin/image_picker", :locals => {:f => f,:field => :cover180_id,:image => @story.cover180,:toggle_image_display => false}
  .field
    = f.label :cover280
    = render :partial => "/shared/admin/image_picker", :locals => {:f => f,:field => :cover280_id,:image => @story.cover280,:toggle_image_display => false}
  .field
    = f.label :gallery_id
    = f.collection_select :gallery_id, Gallery.all, :id, :name
  = render :partial => "/shared/admin/form_actions",:locals => {:f => f,:continue_editing => false,:delete_title => t('admin.stories.story.delete'),:delete_confirmation => t('shared.admin.delete.message', :title => @story.title)}
