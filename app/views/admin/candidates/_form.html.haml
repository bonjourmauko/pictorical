- form_for [:admin, @candidate] do |f|
  = render  :partial => "/shared/admin/error_messages", :locals => { :object => @candidate, :include_object_name => true }
              
  .field
    = f.label :name
    = f.text_field :name, :class => 'larger widest'
  .field
    = f.label :email
    = f.text_field :email
  .field
    = f.label :portfolio
    = f.text_field :portfolio
  .field
    = f.label :country
    = f.text_field :country
  .field
    = f.label :token
    = f.text_field :token
  .field
    = f.label :referral
    = f.text_field :referral
  .field
    = f.label :http_referer
    = f.text_field :http_referer
  = render :partial => "/shared/admin/form_actions", :locals => { :f => f, :continue_editing => false, :delete_title => t('admin.candidates.candidate.delete'), :delete_confirmation => t('shared.admin.delete.message', :title => @candidate.name) }                                                                                     
