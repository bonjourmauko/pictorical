.candidate{:style => "margin-bottom: 1.5em"}
  .info
    = candidate[:id]
    路
    = candidate[:name]
    路
    = candidate[:country]
    路
    = mail_to candidate[:email], candidate[:email]
  .url
    = link_to candidate[:portfolio], candidate[:portfolio]
  .token
    Token:
    = candidate[:token]
    路
    %strong 
      Has refered:
      = candidate.has_refered candidate
  .referral
    Refered by:
    - if candidate[:referral].nil?
      none
    -else
      = candidate[:referral]
  .time_ago
    %strong
      = time_ago_in_words(candidate.created_at).titleize
    
