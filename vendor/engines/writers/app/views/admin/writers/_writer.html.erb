<li class='clearfix record <%= cycle("on", "on-hover") %>' id="<%= dom_id(writer) -%>">
  <span class='title'>
    <%= writer.first_name %>
    <span class="preview">&nbsp;</span>
  </span>
  <span class='actions'>
    <%= link_to refinery_icon_tag("application_go.png"), writer_url(writer),
        :title => t('.view_live'),
        :target => "_blank" %>
    <%= link_to refinery_icon_tag("application_edit.png"), edit_admin_writer_path(writer),
         :title => t('.edit') %>
    <%= link_to refinery_icon_tag("delete.png"), admin_writer_path(writer),
        :class => "cancel confirm-delete",
        :title => t('.delete'),
        :'data-confirm' => t('shared.admin.delete.message',
        :title => writer.first_name
      ),
        :'data-method' => :delete %>
  </span>
</li>
