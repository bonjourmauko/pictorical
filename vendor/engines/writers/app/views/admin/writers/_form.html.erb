<% form_for [:admin, @writer] do |f| -%>
  <%= render :partial => "/shared/admin/error_messages", :locals => {
    :object => @writer,
    :include_object_name => true
  } %>
  
  <div class='field'>
    <%= f.label :first_name -%>
    <%= f.text_field :first_name, :class => 'larger widest' -%>
  </div>
  
  <div class='field'>
    <%= f.label :last_name -%>
    <%= f.text_field :last_name -%>
  </div>
  
  <div class='field'>
    <%= f.label :bio -%>
    <%= f.text_area :bio, :rows => 20, :class => 'wymeditor widest' -%>
  </div>
  
  <div class='field'>
    <%= f.label :links -%>
    <%= f.text_area :links, :rows => 20, :class => 'wymeditor widest' -%>
  </div>
  
  <div class='field'>
    <%= f.label :photo280 -%>
    <%= render :partial => "/shared/admin/image_picker", :locals => {
      :f => f,
      :field => :photo280_id,
      :image => @writer.photo280,
      :toggle_image_display => false
    } %>
  </div>
  
  <%= render :partial => "/shared/admin/form_actions",
              :locals => {
                :f => f,
                :continue_editing => false,
                :delete_title => t('admin.writers.writer.delete'),
                :delete_confirmation => t('shared.admin.delete.message', :title => @writer.first_name)
              } %>
<% end -%>
