<% content_for :body_content_title do %>
  <%= @writer.first_name %>
<% end %>

<% content_for :body_content_left do %>
  
  <div>
    <h3>First Name</h3>
    <%=raw @writer.first_name %>
  </div>
  
  <div>
    <h3>Last Name</h3>
    <%=raw @writer.last_name %>
  </div>
  
  <div>
    <h3>Bio</h3>
    <%=raw @writer.bio %>
  </div>
  
  <div>
    <h3>Links</h3>
    <%=raw @writer.links %>
  </div>
  
  <div>
    <h3>Photo280</h3>
    <%= image_fu @writer.photo280, nil %>
  </div>
  
<% end %>

<% content_for :body_content_right do %>
  <h2><%= t('.other') %></h2>
  <ul id="writers">
    <% @writers.each do |writer| %>
      <li>
        <%= link_to writer.first_name, writer_url(writer) %>
      </li>
    <% end %>
  </ul>
<% end %>

<%= render :partial => "/shared/content_page" %>
