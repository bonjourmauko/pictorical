<% content_for :body_content_title do %>
  <%= @story.title %>
<% end %>

<% content_for :body_content_left do %>
  
  <div>
    <h3>Title</h3>
    <%=raw @story.title %>
  </div>
  
  <div>
    <h3>Artists</h3>
    <%=raw @story.artists_id %>
  </div>
  
  <div>
    <h3>Writers</h3>
    <%=raw @story.writers_id %>
  </div>
  
  <div>
    <h3>Cover180</h3>
    <%= image_fu @story.cover180, nil %>
  </div>
  
  <div>
    <h3>Cover280</h3>
    <%= image_fu @story.cover280, nil %>
  </div>
  
  <div>
    <h3>Story Screenshots</h3>
    <%=raw @story.story_screenshots_id %>
  </div>
  
<% end %>

<% content_for :body_content_right do %>
  <h2><%= t('.other') %></h2>
  <ul id="stories">
    <% @stories.each do |story| %>
      <li>
        <%= link_to story.title, story_url(story) %>
      </li>
    <% end %>
  </ul>
<% end %>

<%= render :partial => "/shared/content_page" %>
