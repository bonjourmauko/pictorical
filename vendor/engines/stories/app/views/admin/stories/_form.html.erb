<% form_for [:admin, @story] do |f| -%>
  <%= render :partial => "/shared/admin/error_messages", :locals => {
    :object => @story,
    :include_object_name => true
  } %>
  
  <div class='field'>
    <%= f.label :title -%>
    <%= f.text_field :title, :class => 'larger widest' -%>
  </div>
  
  <div class='field'>
    <%= f.label :artists_id -%>
    <%= f.text_field :artists_id -%>
  </div>
  
  <div class='field'>
    <%= f.label :writers_id -%>
    <%= f.text_field :writers_id -%>
  </div>
  
  <div class='field'>
    <%= f.label :cover180 -%>
    <%= render :partial => "/shared/admin/image_picker", :locals => {
      :f => f,
      :field => :cover180_id,
      :image => @story.cover180,
      :toggle_image_display => false
    } %>
  </div>
  
  <div class='field'>
    <%= f.label :cover280 -%>
    <%= render :partial => "/shared/admin/image_picker", :locals => {
      :f => f,
      :field => :cover280_id,
      :image => @story.cover280,
      :toggle_image_display => false
    } %>
  </div>
  
  <div class='field'>
    <%= f.label :story_screenshots_id -%>
    <%= f.text_field :story_screenshots_id -%>
  </div>
  
  <%= render :partial => "/shared/admin/form_actions",
              :locals => {
                :f => f,
                :continue_editing => false,
                :delete_title => t('admin.stories.story.delete'),
                :delete_confirmation => t('shared.admin.delete.message', :title => @story.title)
              } %>
<% end -%>
