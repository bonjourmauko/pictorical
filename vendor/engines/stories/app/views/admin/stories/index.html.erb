<div id='actions'>
  <ul>
    <% if Admin::StoriesController.searchable? %>
      <li>
        <%= render :partial => "/shared/admin/search",
                    :locals => {
                      :url => admin_stories_url
                    } %>
      </li>
    <% end %>
    <li>
      <%= link_to t('.create_new'), new_admin_story_url,
                   :class => "add_icon" %>
    </li>
  <% if !searching? and Story.count > 1 and Admin::StoriesController.sortable? %>
    <li>
      <%= link_to t('.reorder', :what => "Stories"),
                   admin_stories_url,
                   :id => "reorder_action",
                   :class => "reorder_icon" %>

      <%= link_to t('.reorder_done', :what => "Stories"),
                   admin_stories_url,
                   :id => "reorder_action_done",
                   :style => "display: none;",
                   :class => "reorder_icon" %>
    </li>
  <% end %>
  </ul>
</div>
<div id='records'>
  <% if searching? %>
    <h2><%= t('shared.admin.search.results_for', :query => params[:search]) %></h2>
    <% if @stories.any? %>
      <%= will_paginate @stories, :previous_label => '&laquo;', :next_label => '&raquo;' %>
      <ul>
        <%= render :partial => "story",
                    :collection => @stories %>
      </ul>
      <%= will_paginate @stories, :previous_label => '&laquo;', :next_label => '&raquo;' %>
    <% else %>
      <p><%= t('shared.admin.search.no_results') %></p>
    <% end %>
  <% else %>
    <% if @stories.any? %>
      <%= will_paginate @stories,
                         :previous_label => '&laquo;',
                         :next_label => '&raquo;' %>

      <%= render :partial => "sortable_list" %>

      <%= will_paginate @stories,
                         :previous_label => '&laquo;',
                         :next_label => '&raquo;' %>
    <% else %>
      <p>
        <strong>
          <%= t('.no_items_yet') %>
        </strong>
      </p>
    <% end %>
  <% end %>
</div>
<%= render :partial => "/shared/admin/make_sortable",
            :locals => {
              :tree => false
            } if !searching? and Story.count > 1 %>
