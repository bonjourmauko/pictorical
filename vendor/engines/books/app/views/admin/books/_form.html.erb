<% form_for [:admin, @book] do |f| -%>
  <%= render :partial => "/shared/admin/error_messages", :locals => {
    :object => @book,
    :include_object_name => true
  } %>
  
  <div class='field'>
    <%= f.label :gallery_id -%>
    <%= f.text_field :gallery_id, :class => 'larger widest' -%>
  </div>
  
  <div class='field'>
    <%= f.label :title -%>
    <%= f.text_field :title -%>
  </div>
  
  <div class='field'>
    <%= f.label :cover180 -%>
    <%= render :partial => "/shared/admin/image_picker", :locals => {
      :f => f,
      :field => :cover180_id,
      :image => @book.cover180,
      :toggle_image_display => false
    } %>
  </div>
  
  <div class='field'>
    <%= f.label :cover280 -%>
    <%= render :partial => "/shared/admin/image_picker", :locals => {
      :f => f,
      :field => :cover280_id,
      :image => @book.cover280,
      :toggle_image_display => false
    } %>
  </div>
  
  <%= render :partial => "/shared/admin/form_actions",
              :locals => {
                :f => f,
                :continue_editing => false,
                :delete_title => t('admin.books.book.delete'),
                :delete_confirmation => t('shared.admin.delete.message', :title => @book.title)
              } %>
<% end -%>
