<li class='clearfix record <%= cycle("on", "on-hover") %>' id="<%= dom_id(candidate) -%>">
  <span class='title'>
    <%= candidate.name %>
    <span class="preview">&nbsp;</span>
  </span>
  <span class='actions'>
    <%= link_to refinery_icon_tag("application_go.png"), candidate_url(candidate),
        :title => t('.view_live'),
        :target => "_blank" %>
    <%= link_to refinery_icon_tag("application_edit.png"), edit_admin_candidate_path(candidate),
         :title => t('.edit') %>
    <%= link_to refinery_icon_tag("delete.png"), admin_candidate_path(candidate),
        :class => "cancel confirm-delete",
        :title => t('.delete'),
        :'data-confirm' => t('shared.admin.delete.message',
        :title => candidate.name
      ),
        :'data-method' => :delete %>
  </span>
</li>
