<% form_for [:admin, @candidate] do |f| -%>
  <%= render :partial => "/shared/admin/error_messages", :locals => {
    :object => @candidate,
    :include_object_name => true
  } %>
  
  <div class='field'>
    <%= f.label :name -%>
    <%= f.text_field :name, :class => 'larger widest' -%>
  </div>
  
  <div class='field'>
    <%= f.label :email -%>
    <%= f.text_field :email -%>
  </div>
  
  <div class='field'>
    <%= f.label :portfolio -%>
    <%= f.text_field :portfolio -%>
  </div>
  
  <div class='field'>
    <%= f.label :country -%>
    <%= f.text_field :country -%>
  </div>
  
  <div class='field'>
    <%= f.label :referral -%>
    <%= f.text_field :referral -%>
  </div>
  
  <div class='field'>
    <%= f.label :http_referer -%>
    <%= f.text_field :http_referer -%>
  </div>
  
  <%= render :partial => "/shared/admin/form_actions",
              :locals => {
                :f => f,
                :continue_editing => false,
                :delete_title => t('admin.candidates.candidate.delete'),
                :delete_confirmation => t('shared.admin.delete.message', :title => @candidate.name)
              } %>
<% end -%>
