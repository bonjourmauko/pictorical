<% content_for :body_content_title do %>
  <%= @candidate.name %>
<% end %>

<% content_for :body_content_left do %>
  
  <div>
    <h3>Name</h3>
    <%=raw @candidate.name %>
  </div>
  
  <div>
    <h3>Email</h3>
    <%=raw @candidate.email %>
  </div>
  
  <div>
    <h3>Portfolio</h3>
    <%=raw @candidate.portfolio %>
  </div>
  
  <div>
    <h3>Country</h3>
    <%=raw @candidate.country %>
  </div>
  
  <div>
    <h3>Referral</h3>
    <%=raw @candidate.referral %>
  </div>
  
  <div>
    <h3>Http Referer</h3>
    <%=raw @candidate.http_referer %>
  </div>
  
<% end %>

<% content_for :body_content_right do %>
  <h2><%= t('.other') %></h2>
  <ul id="candidates">
    <% @candidates.each do |candidate| %>
      <li>
        <%= link_to candidate.name, candidate_url(candidate) %>
      </li>
    <% end %>
  </ul>
<% end %>

<%= render :partial => "/shared/content_page" %>
